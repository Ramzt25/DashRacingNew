{
  "name": "dash-racing",
  "version": "1.0.0",
  "description": "Premium social racing platform - Race Anywhere, Meet Anywhere",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd mobile && npm install && cd ../backend && npm install",
    "start:local": "concurrently \"npm run backend:dev\" \"npm run mobile:start\"",
    "backend:dev": "cd backend && npm run dev",
    "mobile:start": "cd mobile && npm start",
    "mobile:android": "cd mobile && npm run android",
    "get-ip": "node scripts/get-local-ip.js",
    "dev:mobile": "cd mobile && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:ios": "cd mobile && npm run ios",
    "dev:android": "cd mobile && npm run android",
    "build:mobile": "cd mobile && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:apk": "powershell -ExecutionPolicy Bypass -File ./build-apk-fixed.ps1",
    "build:apk:force": "powershell -ExecutionPolicy Bypass -File ./build-apk-fixed.ps1 -ForceRestart",
    "build:apk:quick": "powershell -ExecutionPolicy Bypass -File ./build-apk-fixed.ps1 -SkipTests",
    "validate": "node validate.js",
    "test:integration": "node tests/test-mobile-app-integration.js",
    "test:api": "node tests/test-with-seed-data.js",
    "lint": "cd mobile && npm run lint && cd ../backend && npm run lint",
    "test": "cd mobile && npm test && cd ../backend && npm test",
    "clean": "cd mobile && npm run clean && cd ../backend && npm run clean"
  },
  "workspaces": [
    "mobile",
    "backend",
    "shared"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dash-racing.git"
  },
  "keywords": [
    "react-native",
    "racing",
    "mobile-app",
    "social",
    "automotive",
    "cars",
    "supabase",
    "typescript"
  ],
  "author": "Dash Racing Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0"
  },
  "dependencies": {
    "@react-native-community/cli-platform-android": "^20.0.1",
    "axios": "^1.11.0",
    "concurrently": "^9.2.1",
    "node-fetch": "^3.3.2"
  }
}
